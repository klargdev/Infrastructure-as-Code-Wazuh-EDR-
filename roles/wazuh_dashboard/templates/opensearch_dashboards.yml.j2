# OpenSearch Dashboards configuration for Wazuh Dashboard
server.host: {{ wazuh_dashboard_server_host }}
server.port: {{ wazuh_dashboard_server_port }}
server.ssl.enabled: true
server.ssl.certificate: {{ wazuh_ssl_cert }}
server.ssl.key: {{ wazuh_ssl_key }}

# OpenSearch connection
opensearch.hosts: {{ wazuh_dashboard_opensearch_hosts | join(',') }}
opensearch.ssl.verificationMode: none
opensearch.username: {{ wazuh_indexer_user }}
opensearch.password: {{ wazuh_indexer_password }}

# Security settings
opensearch_security.multitenancy.enabled: true
opensearch_security.readonly_mode.roles: ["kibana_read_only"]

# Logging
logging.verbose: false
logging.dest: stdout
logging.level: {{ wazuh_log_level }}

# Performance
optimize.bundleFilter: ["!tests", "!test", "!testing", "!*.test.js", "!*.spec.js"]
optimize.useBundleCache: true
optimize.bundleDir: /tmp/kibana-optimize-bundles

# Plugin settings
opensearch_security.cookie.secure: true
opensearch_security.cookie.httponly: true
